<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <include layout="@layout/ingame_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            />



    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.71">


        <TextView
            android:id="@+id/tvTimerOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvTimer"
            android:layout_marginBottom="65dp"
            android:clickable="false"
            android:ems="5"
            android:focusable="false"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:clickable="false"
            android:ems="5"
            android:focusable="false"
            android:textAlignment="center"
            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/RelativeLayout3">

        <Button
            android:id="@+id/btStartTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btStartTimer_str"
            android:layout_marginStart="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="startTimer"/>


    <Button
        android:id="@+id/btResetTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btResetTimer_str"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:onClick="resetTimer"/>
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_margin="20dp"
        android:layout_weight="0.28">

        <include
            layout="@layout/ingame_layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />
    </LinearLayout>

</LinearLayout>